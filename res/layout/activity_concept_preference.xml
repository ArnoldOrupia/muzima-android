<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/DashboardTableContainer"
        android:background="@color/theme_color_background">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_concept"
            android:paddingBottom="3dp"
            android:background="@color/tab_background"
            android:textColor="@android:color/white"/>


    <LinearLayout
            style="@style/SummaryItemRow"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp">

        <AutoCompleteTextView
                android:id="@+id/concept_add_concept"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="@color/theme_color"
                android:hint="Enter concept name ...">

            <requestFocus/>
        </AutoCompleteTextView>

    </LinearLayout>

    <View
            style="@style/DividerLine"
            android:layout_height="2dp"/>

    <ListView
            android:id="@+id/concept_preference_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"/>

    <TextView android:id="@+id/no_concept_added"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:textSize="20sp"
              android:layout_marginTop="16dp"
              android:layout_marginBottom="16dp"
              android:text="@string/no_concept_added"
              android:visibility="invisible"/>
    <View
            style="@style/DividerLine"
            android:layout_height="2dp"/>
</LinearLayout>