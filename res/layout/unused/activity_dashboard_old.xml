<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/DashboardWrapper"
    tools:context=".DashboardActivity" >

    <LinearLayout style="@style/DashboardTableContainer" >

        <TextView
            style="@style/DashboardBaseText"
            android:text="Provider" />

        <TextView
            android:id="@+id/providerName"
            style="@style/DashboardTitleText"
            android:text="Last, First" />

        <LinearLayout
            style="@style/ClickableSummaryItem"
            android:onClick="clientList" >

            <LinearLayout style="@style/SummaryItemRow" >

                <LinearLayout style="@style/SummaryItemRowLeftSection" >

                    <TextView
                        style="@style/DashboardBaseText"
                        android:text="Clients"
                        android:textAppearance="?android:attr/textAppearanceLarge" >
                    </TextView>

                    <TextView
                        style="@style/DashboardBaseText"
                        android:layout_marginLeft="5dp"
                        android:text="(3 Cohorts)"
                        android:textAppearance="?android:attr/textAppearanceSmall" >
                    </TextView>
                </LinearLayout>

                <LinearLayout style="@style/SummaryItemRowRightSection" >

                    <TextView
                        android:id="@+id/clients"
                        style="@style/DashboardBaseText"
                        android:text="--"
                        android:textAppearance="?android:attr/textAppearanceLarge" >
                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/SummaryItemRow" >

                <LinearLayout style="@style/SummaryItemRowLeftSection" >

                    <TextView
                        style="@style/DashboardBaseText"
                        android:text="Overdue" >
                    </TextView>
                </LinearLayout>

                <LinearLayout style="@style/SummaryItemRowRightSection" >

                    <TextView
                        android:id="@+id/overdueClients"
                        style="@style/DashboardBaseText"
                        android:text="--" >
                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/SummaryItemRow" >

                <LinearLayout style="@style/SummaryItemRowLeftSection" >

                    <TextView
                        style="@style/DashboardBaseText"
                        android:text="Upcoming (Next 7 days)" >
                    </TextView>
                </LinearLayout>

                <LinearLayout style="@style/SummaryItemRowRightSection" >

                    <TextView
                        android:id="@+id/upcomingClients"
                        style="@style/DashboardBaseText"
                        android:text="--" >
                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/ClickableSummaryItem"
            android:onClick="formsList" >

            <LinearLayout style="@style/SummaryItemRow" >

                <LinearLayout style="@style/SummaryItemRowLeftSection" >

                    <TextView
                        style="@style/DashboardBaseText"
                        android:text="Forms"
                        android:textAppearance="?android:attr/textAppearanceLarge" >
                    </TextView>
                </LinearLayout>

                <LinearLayout style="@style/SummaryItemRowRightSection" >

                    <TextView
                        android:id="@+id/forms"
                        style="@style/DashboardBaseText"
                        android:text="--"
                        android:textAppearance="?android:attr/textAppearanceLarge" >
                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/SummaryItemRow" >

                <LinearLayout style="@style/SummaryItemRowLeftSection" >

                    <TextView
                        style="@style/DashboardBaseText"
                        android:text="Incomplete" >
                    </TextView>
                </LinearLayout>

                <LinearLayout style="@style/SummaryItemRowRightSection" >

                    <TextView
                        android:id="@+id/incompleteForms"
                        style="@style/DashboardBaseText"
                        android:text="--" >
                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/SummaryItemRow" >

                <LinearLayout style="@style/SummaryItemRowLeftSection" >

                    <TextView
                        style="@style/DashboardBaseText"
                        android:text="Outbox" >
                    </TextView>
                </LinearLayout>

                <LinearLayout style="@style/SummaryItemRowRightSection" >

                    <TextView
                        android:id="@+id/outboxForms"
                        style="@style/DashboardBaseText"
                        android:text="--" >
                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/ClickableSummaryItem"
            android:onClick="noticesList" >

            <LinearLayout style="@style/SummaryItemRow" >

                <LinearLayout style="@style/SummaryItemRowLeftSection" >

                    <TextView
                        style="@style/DashboardBaseText"
                        android:text="Notices"
                        android:textAppearance="?android:attr/textAppearanceLarge" >
                    </TextView>
                </LinearLayout>

                <LinearLayout style="@style/SummaryItemRowRightSection" >

                    <TextView
                        android:id="@+id/notices"
                        style="@style/DashboardBaseText"
                        android:text="--"
                        android:textAppearance="?android:attr/textAppearanceLarge" >
                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/SummaryItemRow" >

                <LinearLayout style="@style/SummaryItemRowLeftSection" >

                    <TextView
                        style="@style/DashboardBaseText"
                        android:text="Unread" >
                    </TextView>
                </LinearLayout>

                <LinearLayout style="@style/SummaryItemRowRightSection" >

                    <TextView
                        android:id="@+id/unreadNotices"
                        style="@style/DashboardBaseText"
                        android:text="--" >
                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/SummaryItemRow" >

                <LinearLayout style="@style/SummaryItemRowLeftSection" >

                    <TextView
                        style="@style/DashboardBaseText"
                        android:text="Recommendations" >
                    </TextView>
                </LinearLayout>

                <LinearLayout style="@style/SummaryItemRowRightSection" >

                    <TextView
                        android:id="@+id/RecommendationsNotices"
                        style="@style/DashboardBaseText"
                        android:text="--" >
                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom"
        android:orientation="vertical" >

        <LinearLayout style="@style/DashboardRefreshBar" >

            <ImageButton
                android:id="@+id/refreshButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#222222"
                android:padding="5dp"
                android:src="@drawable/ic_sync" />

            <TextView
                style="@style/DashboardBaseText"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="right|center"
                android:padding="5dp"
                android:text="Last Sync: 3:00 pm 5/27/2013"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>