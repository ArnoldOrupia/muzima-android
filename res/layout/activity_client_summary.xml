<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/DashboardTableContainer">

    <TextView
            android:id="@+id/providerName"
            style="@style/DashboardTitleText"
            android:text="Demographics"/>

    <LinearLayout style="@style/SummaryItemRow">

        <TextView
                android:id="@+id/quickSearch"
                style="@style/DashboardTextButton"
                android:drawableLeft="@drawable/ic_search"
                android:singleLine="true"
                android:text="@string/search_observations">
        </TextView>

        <TextView
                style="@style/DashboardTextButton"
                android:drawableLeft="@drawable/ic_list"
                android:singleLine="true"
                android:text="@string/view_encounters">
        </TextView>

    </LinearLayout>

    <View style="@style/DividerLine">
    </View>

    <LinearLayout
            style="@style/ClickableSummaryItem">

        <LinearLayout style="@style/SummaryItemRow">


            <TextView
                    style="@style/DashboardListItemPrimaryText"
                    android:layout_weight=".7"
                    android:gravity="left"
                    android:text="@string/reminders">
            </TextView>

            <TextView
                    android:id="@+id/cohortsCount"
                    style="@style/DashboardListItemPrimaryText"
                    android:layout_weight=".3"
                    android:gravity="right"
                    android:text="##">
            </TextView>
        </LinearLayout>

        <TextView
                android:id="@+id/cohortDescription"
                style="@style/DashboardItemDescription"
                android:text="##">
        </TextView>

    </LinearLayout>

    <View style="@style/DividerLine">
    </View>

    <LinearLayout
            style="@style/ClickableSummaryItem"
            android:onClick="showForms">

        <LinearLayout style="@style/SummaryItemRow">

            <TextView
                    style="@style/DashboardListItemPrimaryText"
                    android:layout_weight=".7"
                    android:gravity="left"
                    android:text="@string/forms">
            </TextView>

            <TextView
                    android:id="@+id/patientsCount"
                    style="@style/DashboardListItemPrimaryText"
                    android:layout_weight=".3"
                    android:gravity="right"
                    android:text="##">
            </TextView>
        </LinearLayout>

        <TextView
                android:id="@+id/patientDescription"
                style="@style/DashboardItemDescription"
                android:text="##">
        </TextView>

    </LinearLayout>

    <View style="@style/DividerLine">
    </View>

    <LinearLayout
            style="@style/ClickableSummaryItem">

        <LinearLayout style="@style/SummaryItemRow">

            <TextView
                    style="@style/DashboardListItemPrimaryText"
                    android:layout_weight=".7"
                    android:gravity="left"
                    android:text="@string/observations">
            </TextView>

            <TextView
                    android:id="@+id/noticesCount"
                    style="@style/DashboardListItemPrimaryText"
                    android:layout_weight=".3"
                    android:gravity="right"
                    android:text="##">
            </TextView>
        </LinearLayout>

        <TextView
                android:id="@+id/noticesDescription"
                style="@style/DashboardItemDescription"
                android:text="##">
        </TextView>

    </LinearLayout>

    <View style="@style/DividerLine">
    </View>
</LinearLayout>
