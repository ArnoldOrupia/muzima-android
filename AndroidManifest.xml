<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.muzima"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="android.app.default_searchable"
            android:value="com.muzima.view.SearchResultsActivity" />

        <activity
            android:name="com.muzima.view.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.muzima.view.ClientListActivity"
            android:label="@string/title_activity_client_list"
            android:parentActivityName="com.muzima.view.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.muzima.view.DashboardActivity" />
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="com.muzima.view.SearchResultsActivity"
            android:label="@string/title_activity_search_results"
            android:parentActivityName="com.muzima.view.ClientListActivity" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="com.muzima.view.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.muzima.view.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.muzima.view.DashboardActivity" />
        </activity>
        <activity
            android:name="com.muzima.view.HelpActivity"
            android:label="@string/title_activity_help"
            android:parentActivityName="com.muzima.view.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.muzima.view.DashboardActivity" />
        </activity>
        <activity
            android:name="com.muzima.view.LogoutActivity"
            android:label="@string/title_activity_logout"
            android:parentActivityName="com.muzima.view.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.muzima.view.DashboardActivity" />
        </activity>
        <activity
            android:name="com.muzima.view.RegisterClientActivity"
            android:label="@string/title_activity_register_client"
            android:parentActivityName="com.muzima.view.ClientListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.muzima.view.ClientListActivity" />
        </activity>
        <activity
            android:name="com.muzima.view.SyncActivity"
            android:label="@string/title_activity_sync"
            android:parentActivityName="com.muzima.view.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.muzima.view.DashboardActivity" />
        </activity>
        <activity
            android:name="com.muzima.view.FormListActivity"
            android:label="@string/title_activity_form_list"
            android:parentActivityName="com.muzima.view.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.muzima.view.DashboardActivity" />
        </activity>
        <activity
            android:name="com.muzima.view.NoticeListActivity"
            android:label="@string/title_activity_notice_list"
            android:parentActivityName="com.muzima.view.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.muzima.view.DashboardActivity" />
        </activity>
        <activity
            android:name="com.muzima.view.ClientSummaryActivity"
            android:label="@string/title_activity_client_summary"
            android:parentActivityName="com.muzima.view.ClientListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.muzima.view.ClientListActivity" />
        </activity>
        <activity
            android:name="com.muzima.view.ClientObservationsActivity"
            android:label="@string/title_activity_client_observations"
            android:parentActivityName="com.muzima.view.ClientSummaryActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.muzima.view.ClientSummaryActivity" />
        </activity>
    </application>

</manifest>